{
    "name": "minimale/database",
    "description": "A minimal PDO wrapper for PHP.",
    "type": "library",
    "version": "1.0.0",
    "license": "MIT",
    "keywords": ["database", "pdo", "wrapper", "firebird", "sqlite"],
    "autoload": {
        "psr-4": {
            "Minimale\\Database\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Minimale\\Database\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Minimale PHP"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.5",
        "ext-pdo": "*",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93",
        "infection/infection": "^0.32.3",
        "mockery/mockery": "^1.6",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12",
        "rector/rector": "^2.3",
        "symfony/var-dumper": "^8.0"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "fix:style": "php-cs-fixer fix",
        "refactor": "rector",
        "test:rector": "rector --dry-run",
        "test:style": "php-cs-fixer --dry-run -vvv --diff fix",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html=var/coverage --coverage-text",
        "test:mutation": "infection",
        "test": [
            "@test:style",
            "@test:rector",
            "@test:types",
            "@test:unit",
            "@test:mutation"
        ]
    }
}
