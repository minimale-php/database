{
    "name": "organization/package",
    "description": "PHP Template",
    "version": "1.0.0",
    "autoload": {
        "psr-4": {
            "Organization\\Package\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Organization\\Package\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "John Doe",
            "email": "john.doe@email.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "phpunit/phpunit": "^12",
        "friendsofphp/php-cs-fixer": "^3.93",
        "rector/rector": "^2.3",
        "infection/infection": "^0.32.3",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "fix:style": "php-cs-fixer fix",
        "refactor": "rector",
        "test:rector": "rector --dry-run",
        "test:style": "php-cs-fixer --dry-run -vvv --diff fix",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html=var/coverage --coverage-text",
        "test:mutation": "infection",
        "test": [
            "@test:style",
            "@test:rector",
            "@test:types",
            "@test:unit",
            "@test:mutation"
        ]
    }
}
